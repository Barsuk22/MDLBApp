<?xml version="1.0" encoding="utf-8"?>

<resources>
<style name="Theme.MDLBApp" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- Оверлей-тема только для экрана входящего звонка -->
    <style name="Theme.MDLBApp.NoActionBar" parent="Theme.MDLBApp">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>

        <!-- красиво во весь экран -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- если захочешь светлые иконки статус-бара, можно добавить:
        <item name="android:windowLightStatusBar">false</item> -->
    </style>
</resources>